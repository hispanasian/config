{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "background": "transparent",
            "foreground": "#FFEB3B",
            "style": "plain",
            "template": "\u26a1 ",
            "type": "root"
          },
          {
            "background": "transparent",
            "foreground": "#ffffff",
            "style": "plain",
            "template": "{{.Icon}} ",
            "type": "os"
          },
          {
            "background": "#ffffff",
            "foreground": "#262626",
            "leading_diamond": "<transparent,#ffffff>\ue0b0</>",
            "style": "diamond",
            "template": "  {{ .UserName }}<transparent>\ue0bd </>{{ .HostName }}",
            "trailing_diamond": "\ue0b0",
            "type": "session"
          },
          {
            "background": "#0091ff",
            "foreground": "#444444",
            "leading_diamond": "<transparent,#0091ff>\ue0b0</>",
            "properties": {
              "folder_icon": "\uf6d7",
              "folder_separator_icon": "<transparent> \ue0bd </>",
              "home_icon": "\uf7db",
              "style": "agnoster_short"
            },
            "style": "diamond",
            "template": " {{ .Path }} ",
            "trailing_diamond": "\ue0b0",
            "type": "path"
          },
          {
            "background": "#00C853",
            "background_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
              "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
              "{{ if gt .Behind 0 }}#B388FF{{ end }}"
            ],
            "foreground": "#262626",
            "powerline_symbol": "\ue0b0",
            "properties": {
              "fetch_stash_count": true,
              "fetch_status": true
            },
            "style": "powerline",
            "template": " {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
            "type": "git"
          },
          {
            "background": "#910000",
            "foreground": "#ffffff",
            "leading_diamond": "<transparent,#910000>\ue0b0</>",
            "style": "diamond",
            "template": "<transparent> \uf12a</> {{ .Meaning }} ",
            "trailing_diamond": "\ue0b0",
            "type": "exit"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "background": "transparent",
            "foreground": "#ffffff",
            "foreground_templates": [
              "{{ if gt .Code 0 }}#ff0000{{ end }}"
            ],
            "style": "plain",
            "template": "{{.Name}} ",
            "type": "shell",
            "properties": {
              "always_enabled": true,
              "mapped_shell_names": {
                "pwsh": "\u03c1",
                "bash": "\u03b2",
                "zsh": "\u03B6"
              }
            }
          }
        ],
        "type": "prompt"
      }
    ],
    "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üèö\" }} @ {{.HostName}}",
    "version": 2
  }
